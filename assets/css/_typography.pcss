}

@font-face {
  font-family: 'On Diatype Standard';
  src: url('assets/fonts/OnDiatypeStd-Bold.woff2') format('woff2'),
    url('assets/fonts/OnDiatypeStd-Bold.woff') format('woff');
  font-weight: bold;
  font-style: normal;
  font-display: swap;
}
